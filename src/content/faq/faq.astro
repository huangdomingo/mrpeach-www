---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const faqs = (await getCollection('faq')).sort(
  (a, b) => (a.data.order ?? 999) - (b.data.order ?? 999)
);
---

<BaseLayout title="常見問題｜拉拉山水蜜桃達人">
  <section class="max-w-3xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-6">常見問題</h1>

    <dl class="space-y-4">
      {faqs.map((item) => (
        <div>
          <dt class="font-semibold">{item.data.question}</dt>
          <dd class="mt-1 text-slate-700 whitespace-pre-line">
            {item.data.answer}
          </dd>
        </div>
      ))}
    </dl>
  </section>
</BaseLayout>
